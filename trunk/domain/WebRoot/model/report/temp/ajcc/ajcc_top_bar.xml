<anychart>
    <settings>
        <animation enabled="True"/>
    </settings>
    <charts>
        <chart plot_type="CategorizedHorizontal">
      <data_plot_settings default_series_type="Bar" enable_3d_mode="True">
      </data_plot_settings>
            <chart_settings>
                <title enabled="True">
                    <text>
                        当前的业务状态
                    </text>
			 <font bold="True" underline="false" size="18" color="#00E5EE">
				<effects>
				<drop_shadow enabled="true" />
				</effects>
			</font>
                </title>
                <axes>
                    <x_axis>
                        <title >
                            <text >
                                业务类型
                            </text>
							<font bold="True" underline="false" size="15" color="#1E90FF">
								<effects>
									<drop_shadow enabled="true" />
								</effects>
							</font>
                        </title>
                      <line enabled="true" thickness="3" type="gradient"> 
            			<gradient type="linear"> 
  						 <key position="0" color="LightGreen" /> 
   				        </gradient> 
	                   </line>
                    </x_axis>
                    <y_axis>
                        <title>
                            <text>
                                业务统计
                            </text>	
					 <font bold="True" underline="false" size="15" color="#1E90FF">
						<effects>
					    	<drop_shadow enabled="true" />
					   </effects>
					</font>					
                        </title> 
                       <line enabled="true" thickness="3" type="gradient"> 
            			<gradient type="linear"> 
  						 <key position="0" color="LightGreen" /> 
                         <key position="1" color="Red" />   
   				        </gradient> 
	                   </line> 
 
				     <scale minimum="0"/>    
				 		 <labels>
                            <format>
                               {%Value}{numDecimals:0}
                            </format>
							<font bold="True" underline="false" size="15" color="#1E90FF">
								<effects>
									<drop_shadow enabled="true" />
								</effects>
							</font>
                        </labels>           
                    </y_axis>
                </axes>
            </chart_settings>
            <data>
                <series id="s1" name="A" type="Bar">
			        <tooltip enabled="true">
			     		 <format>
			     	     	{%Name}:{%YValue}{numDecimals:0}件
				   		 </format>
				    </tooltip>		
                </series>
            </data>
        </chart>
    </charts>
</anychart>
